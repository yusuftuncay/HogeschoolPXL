@model HogeschoolPXL.Models.Lector

@{
    ViewData["Title"] = "Creëer";
}

<h1 class="titleView">Creëer Lector</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GebruikerId" class="control-label"></label>
                <select asp-for="GebruikerId" class ="form-control" asp-items="ViewBag.GebruikerId"></select>
            </div>
            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-outline-secondary btn-sm backArrow" asp-action="Index" asp-controller="Lector">
                    <img src="~/img/arrow-left.svg" />
                    <span class="backButton">Terug</span>
                </a>
                <input type="submit" value="Creëer Lector" class="btn btn-outline-success btn-sm viewButton" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
