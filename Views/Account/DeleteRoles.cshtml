@model RoleViewModel

<h1 class="titleView">Verwijder Rollen</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="DeleteRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Rollen</label>
                <select asp-for="RoleName" class="form-control" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="form-group d-flex justify-content-between">
                <a class="btn-sm backArrow" asp-action="Identity" asp-controller="Account">
                    <img src="~/img/arrow-left-black.png" height="16" />
                    <span>Terug</span>
                </a>
                <input type="submit" value="Verwijder Rol" class="btn btn-outline-danger btn-sm viewButton" />
            </div>
        </form>
    </div>
</div>