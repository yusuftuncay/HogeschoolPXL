@model HogeschoolPXL.Models.Handboek

@{
    ViewData["Title"] = "Details";
    var b = Html.DisplayFor(model => model.Afbeelding).ToString();
    var a = Html.DisplayFor(model => model.Afbeelding);

}

<h1>Details Handboek</h1>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KostPrijs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KostPrijs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UitgifteDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UitgifteDatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Afbeelding)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Afbeelding == null)
            {
                <text>Geen Afbeelding Beschikbaar</text>
            }
            else
            {
                <img src="@Model.Afbeelding" width="170px" height="240px" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.HandboekId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
