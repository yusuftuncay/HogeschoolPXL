@model HogeschoolPXL.Models.Inschrijving

@{
    ViewData["Title"] = "Edit";
}

<h1 class="titleView">Edit Inschrijving</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InschrijvingId"/>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VakLectorId" class="control-label"></label>
                <select asp-for="VakLectorId" class="form-control" asp-items="ViewBag.VakLectorId"></select>
                <span asp-validation-for="VakLectorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcademiejaarId" class="control-label"></label>
                <select asp-for="AcademiejaarId" class="form-control" asp-items="ViewBag.AcademiejaarId"></select>
                <span asp-validation-for="AcademiejaarId" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-sm backArrow" href="javascript:history.back()">
                    <img src="~/img/arrow-left-black.png" height="16"/>
                    <span >Terug</span>
                </a>
                <input type="submit" value="Update Inschrijving" class="btn btn-outline-success btn-sm viewButton"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
