@model HogeschoolPXL.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1 class="titleView">Edit Student</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId"/>
            @if (ViewBag.GebruikerId != null)
            {
                <div class="form-group">
                    <label asp-for="GebruikerId" class="control-label"></label>
                    <select asp-for="GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                    <span asp-validation-for="GebruikerId" class="text-danger"></span>
                </div>
            }
            <div class="form-group d-flex justify-content-between">
                <a class="btn-sm backArrow" href="javascript:history.back()">
                    <img src="~/img/arrow-left-black.png" height="16"/>
                    <span >Terug</span>
                </a>
                @if (ViewBag.GebruikerId != null) { <input type="submit" value="Update Student" class="btn btn-outline-success btn-sm viewButton" /> }
                else { <input type="submit" value="Update Student" class="btn btn-outline-success btn-sm viewButton" disabled/> }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
