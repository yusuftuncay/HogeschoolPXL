@model HogeschoolPXL.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1 class="titleView">Create Student</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.GebruikerId != null)
            {
                <div class="form-group">
                    <label asp-for="GebruikerId" class="control-label"></label>
                    <select asp-for="GebruikerId" class ="form-control" asp-items="ViewBag.GebruikerId"></select>
                </div>
            }
            <div class="form-group d-flex justify-content-between">
                <a class="btn-sm backArrow" asp-action="Index" asp-controller="Student">
                    <img src="~/img/arrow-left-black.png" height="16"/>
                    <span >Back</span>
                </a>
                @if (ViewBag.GebruikerId != null) { <input type="submit" value="Create Student" class="btn btn-outline-success btn-sm viewButton"/> }
                else { <input type="submit" value="Create Student" class="btn btn-outline-success btn-sm viewButton" disabled/> }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
